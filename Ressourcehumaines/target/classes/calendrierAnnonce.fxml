<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="536.0" prefWidth="792.0"
            stylesheets="/css/calendrier.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="gui.calendrierAnnonce">

    <!-- Grille du calendrier -->
    <GridPane fx:id="gridCalendarAnnonce" hgap="5" layoutX="10" layoutY="89.0"
              prefHeight="435.0" prefWidth="770.0" vgap="5">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <!-- Logo en haut Ã  gauche -->
    <ImageView fitHeight="97.0" fitWidth="173.0" layoutX="-14.0" layoutY="-8.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@css/logo.png" />
        </image>
    </ImageView>

    <!-- Titre de la page -->
    <Label fx:id="titreCalAnnonce" layoutX="72.0" layoutY="13.0" text="Calendrier des Annonces" underline="true" />

    <!-- Bouton retour -->
    <Button layoutX="704.0" layoutY="28.0" mnemonicParsing="false" onAction="#Retour" text="Retour" />

</AnchorPane>
