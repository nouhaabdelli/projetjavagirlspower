<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.modifieravancecontroller">
    <children>
        <VBox spacing="20.0" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <Label text="Modifier l'Avance" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <TextField fx:id="montantField" promptText="Montant (ex: 1000.00)"/>
            <TextField fx:id="dureeField" promptText="Durée (mois)"/>
            <DatePicker fx:id="dateAvancePicker" promptText="Date de l'Avance"/>
            <TextField fx:id="niveauUrgenceField" promptText="Niveau d'urgence"/>
            <TextField fx:id="etatField" promptText="État"/>
            <Button fx:id="saveButton" text="Sauvegarder"/>
        </VBox>
    </children>
</AnchorPane>