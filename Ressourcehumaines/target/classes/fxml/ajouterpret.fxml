<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../style/ajouterpret.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ajouterpretcontroller">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="200.0" layoutY="50.0" spacing="15.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="50.0">
            <Label text="Ajouter un Prêt" styleClass="form-title"/>

            <TextField fx:id="montantField" promptText="Montant (ex: 1000.00)" />
            <TextField fx:id="dureeField" promptText="Durée (mois)" />
            <DatePicker fx:id="datePretPicker" promptText="Date du prêt" />
            <TextField fx:id="niveauUrgenceField" promptText="Niveau d'urgence (faible, moyen, élevé)" />
            <TextField fx:id="etatField" promptText="État (mariage, frais médicaux, autres)" />

            <Button text="Ajouter" onAction="#ajouterPret" styleClass="form-button" />

            <!-- Section pour la conversion USD en EUR -->
            <Label text="Convertir USD en EUR" styleClass="form-title" style="-fx-font-size: 20px; -fx-text-fill: #1e3a8a;" />
            <TextField fx:id="montantTNDField" promptText="Montant en USD" />
            <Button text="Échanger" onAction="#convertUSDToEUR" styleClass="form-button" />
            <Label fx:id="resultLabel" text="Résultat : " style="-fx-font-size: 16px; -fx-text-fill: #1e3a8a;" />
        </VBox>
    </children>
</AnchorPane>