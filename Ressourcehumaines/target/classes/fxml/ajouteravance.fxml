<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../style/ajouteravance.css" xmlns="http://javafx.com/javafx/21.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ajouteravancecontroller">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="200.0" layoutY="50.0" spacing="20.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="50.0">
            <Label text="Ajouter une Avance " styleClass="form-title-glow"/>
            <TextField fx:id="montantField" promptText="Montant (ex: 800.00)" styleClass="input-field"/>
            <TextField fx:id="dureeField" promptText="Durée (max 12 mois)" styleClass="input-field"/>
            <DatePicker fx:id="dateAvancePicker" promptText="Date de l'Avance" styleClass="input-field"/>
            <TextField fx:id="niveauUrgenceField" promptText="Niveau d'urgence (faible, moyen, élevé)" styleClass="input-field"/>
            <TextField fx:id="etatField" promptText="État (mariage, frais médicaux , autres )" styleClass="input-field"/>
            <Button text="Lancer l'Ajout ✨" onAction="#ajouterAvance" styleClass="form-button-glow"/>
        </VBox>
    </children>
</AnchorPane>