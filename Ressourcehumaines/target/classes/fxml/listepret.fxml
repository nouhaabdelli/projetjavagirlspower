    <items>

        <!-- Zone centrale -->
        <VBox alignment="TOP_CENTER" prefHeight="617.0" prefWidth="1014.0" spacing="15" style="-fx-background-color: #ecf0f1;">
            <children>
                <Label style="-fx-font-size: 20px; -fx-text-fill: #2980b9;" text="Liste des Prêts" />
                <TableView fx:id="tableViewPret" prefHeight="400" prefWidth="600">
                    <columns>
                        <TableColumn fx:id="colMontant" prefWidth="155.99999237060547" text="Montant" />
                        <TableColumn fx:id="colDuree" prefWidth="212.800048828125" text="Durée" />
                        <TableColumn fx:id="colDatePret" prefWidth="224.0" text="Date Prêt" />
                        <TableColumn fx:id="colNiveauUrgence" prefWidth="143.2000732421875" text="Urgence" />
                        <TableColumn fx:id="colEtat" prefWidth="182.39990234375" text="État" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button onAction="#afficher" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Afficher" />
                        <Button onAction="#modifier" style="-fx-background-color: #f39c12; -fx-text-fill: white;" text="Modifier" />
                        <Button onAction="#supprimer" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Supprimer" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </items>
</SplitPane>
