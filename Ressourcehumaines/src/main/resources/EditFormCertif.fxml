<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@style/StyleForm.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="gui.EditCertificatController">
    <VBox prefWidth="596.0" spacing="15.0" styleClass="vbox-container">

        <Label styleClass="title-label" text="Modifier Certificat" />

        <TextField fx:id="titreField" promptText="Titre" styleClass="form-field" />
        <TextArea fx:id="descriptionField" prefRowCount="4" promptText="Description" styleClass="form-field" wrapText="true" />

        <ComboBox fx:id="userComboBox" promptText="Utilisateur" styleClass="form-field" />
        <ComboBox fx:id="formationComboBox" promptText="Formation" styleClass="form-field" />
        <ComboBox fx:id="niveauComboBox" promptText="Niveau" styleClass="form-field" />

        <DatePicker fx:id="dateExpirationPicker" promptText="Date d'expiration" styleClass="form-field" />
        <TextField fx:id="validiteField" promptText="Validité (années)" styleClass="form-field" />
        <TextField fx:id="usernameField" promptText="Nom d'utilisateur (affichage)" styleClass="form-field" />

        <HBox alignment="CENTER" spacing="10" styleClass="button-box">
            <Button onAction="#saveChanges" styleClass="btn-danger"  text="Enregistrer" />
        </HBox>

    </VBox>
</AnchorPane>
