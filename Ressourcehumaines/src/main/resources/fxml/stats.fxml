<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.*?>

<VBox alignment="CENTER" spacing="30" styleClass="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.StatsController">
    <stylesheets>/style/stats.css</stylesheets>

    <padding>
        <Insets bottom="30" left="20" right="20" top="30"/>
    </padding>

    <Label fx:id="titleLabel" styleClass="title-label" text="Statistiques des Avances (Total: 5)"/>

    <BarChart fx:id="montantChart" animated="true" title="Distribution des Montants d'Avance" prefHeight="250">
        <xAxis>
            <CategoryAxis label="Montant (TND)"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Nombre d'Avances" minorTickVisible="false"/>
        </yAxis>
    </BarChart>

    <BarChart fx:id="urgenceChart" animated="true" title="Avances par Niveau d'Urgence" prefHeight="250">
        <xAxis>
            <CategoryAxis label="Niveau d'Urgence"/>
        </xAxis>
        <yAxis>
            <NumberAxis label="Nombre d'Avances" minorTickVisible="false"/>
        </yAxis>
    </BarChart>

    <Button fx:id="retourButton" onAction="#handleRetour" text="â¬… Retour" styleClass="retour-button"/>
</VBox>