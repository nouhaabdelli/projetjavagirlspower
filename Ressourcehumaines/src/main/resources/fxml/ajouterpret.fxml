<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../style/ajouterpret.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ajouterpretcontroller">

    <children>
        <VBox alignment="TOP_CENTER" layoutX="200.0" layoutY="50.0" spacing="15.0" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="50.0">

            <Label text="Ajouter un Prêt" styleClass="form-title"/>

            <TextField fx:id="montantField" promptText="Montant (ex: 1000.00)" />
            <TextField fx:id="dureeField" promptText="Durée (mois)" />
            <DatePicker fx:id="datePretPicker" promptText="Date du prêt" />
            <TextField fx:id="niveauUrgenceField" promptText="Niveau d'urgence (faible, moyen, élevé)" />
            <TextField fx:id="etatField" promptText="État (en attente, accepté, rejeté)" />

            <Button text="Ajouter" onAction="#ajouterPret" styleClass="form-button" />
        </VBox>
    </children>
</AnchorPane>

