<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="root" prefWidth="1000" prefHeight="600" style="-fx-background-color: #f9fafb;" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.Dashboard">
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #2d3748; -fx-padding: 10;" spacing="10">
        <VBox spacing="5">
            <Label text="Anna Dupont" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            <Label text="Admin HR" style="-fx-text-fill: #a0aec0; -fx-font-size: 12px;" />
        </VBox>
        <TextField fx:id="searchField" promptText="Search" style="-fx-background-color: white; -fx-padding: 5; -fx-border-radius: 5;" />
    </HBox>

    <HBox>
        <VBox style="-fx-background-color: #2d3748; -fx-padding: 10;" spacing="10">
            <Button fx:id="dashboardBtn" text="Dashboard" style="-fx-text-fill: white; -fx-background-color: #4a5568;" onAction="#showDashboard" />
            <Button fx:id="usersBtn" text="Gestion des utilisateurs" style="-fx-text-fill: #a0aec0; -fx-background-color: #2d3748;" onAction="#showUsers" />
            <Button fx:id="demandsBtn" text="Gestion des demandes" style="-fx-text-fill: #a0aec0; -fx-background-color: #2d3748;" onAction="#showDemands" />
            <Button fx:id="complaintsBtn" text="Gestion des réclamations" style="-fx-text-fill: #a0aec0; -fx-background-color: #2d3748;" onAction="#showComplaints" />
            <Button fx:id="trainingsBtn" text="Gestion des formations" style="-fx-text-fill: #a0aec0; -fx-background-color: #2d3748;" onAction="#showTrainings" />
            <Button fx:id="eventsBtn" text="Gestion des événements" style="-fx-text-fill: #a0aec0; -fx-background-color: #2d3748;" onAction="#showEvents" />
            <Button fx:id="reportsBtn" text="Rapports et Statistiques" style="-fx-text-fill: #a0aec0; -fx-background-color: #2d3748;" onAction="#showReports" />
        </VBox>

        <GridPane fx:id="contentArea" hgap="10" vgap="10" style="-fx-padding: 20;" alignment="TOP_CENTER">
            <children>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 1);">
                    <Label text="Gestion des demandes" style="-fx-font-size: 16px;" />
                    <Label text="12" style="-fx-font-size: 24px; -fx-text-fill: #4a5568;" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 1);">
                    <Label text="Gestion des réclamations" style="-fx-font-size: 16px;" />
                    <Label text="5" style="-fx-font-size: 24px; -fx-text-fill: #4a5568;" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 1);">
                    <Label text="Gestion des utilisateurs" style="-fx-font-size: 16px;" />
                    <Label text="3" style="-fx-font-size: 24px; -fx-text-fill: #4a5568;" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 1);">
                    <Label text="Gestion des formations" style="-fx-font-size: 16px;" />
                    <Label text="8" style="-fx-font-size: 24px; -fx-text-fill: #4a5568;" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 1);">
                    <Label text="Gestion des annonces" style="-fx-font-size: 16px;" />
                    <Label text="4" style="-fx-font-size: 24px; -fx-text-fill: #4a5568;" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 1);">
                    <Label text="Gestion des événements" style="-fx-font-size: 16px;" />
                    <Label text="6" style="-fx-font-size: 24px; -fx-text-fill: #4a5568;" />
                </VBox>
            </children>
        </GridPane>

    </HBox>

</VBox>